vrrp_script check_haproxy {                 
    script "/home/keepalived_script/haprxoxy88" 
    weight 20                              
    interval 1               
}

vrrp_instance agama {             
    interface ens3
    virtual_router_id 1
    {% if inventory_hostname == 'An4eli-1' %}
    priority 100
    {% else %}
    priority 99
    {% endif %}
    advert_int 1                            
    virtual_ipaddress {                     
        192.168.100.{{ node_id_vm1 }}/24                   
    }

    unicast_peer {
        {% for vm  in groups['keepalived'] %}
        {% if inventory_hostname != vm %}
        {{hostvars[vm]['ansible_default_ipv4']['address'] }}
        {% endif %}
        {% endfor %}
    }

    
    track_script {
        check_haproxy
    }
}

