acl corpnets { {{ localnetwork }}; {{ localhost }}; {{ docker_network }}; };
options {
    directory "/var/cache/bind";
    forwarders {
        {% for ip in forwarders %}
              {{ ip }};
        {% endfor %}

    };
    allow-query {
      corpnets;
    };
    dnssec-validation no;

};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
